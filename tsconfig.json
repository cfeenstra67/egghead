{
    "include": [
        "local-db.ts",
        "custom.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "infra/**/*.ts",
    ],
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "sourceMap": true,
        "noEmitOnError": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "jsx": "react-jsx",
        "allowJs": true,
        "isolatedModules": true
    }
}
