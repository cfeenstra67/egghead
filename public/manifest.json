{
  "name": "Egghead History",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "A delightful browser history replacement",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "host_permissions": ["http://*/", "https://*/"],
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "alarms",
    "history",
    "scripting"
  ],
  "chrome_url_overrides": {
    "history": "history.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open popup"
    }
  }
}
